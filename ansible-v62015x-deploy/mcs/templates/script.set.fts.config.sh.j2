#!/bin/sh

cd {{ mcs_server_dir }}/scripts

if [ ! {{ mql_password }} ]; then
  ./mql << EOF
  set context person {{ mql_user }};
  set system searchindex file {{ mcs_config_xml }};
  quit;
EOF
else
  ./mql << EOF
  set context person {{ mql_user }} password {{ mql_password }};
  set system searchindex file {{ mcs_config_xml }};
  quit;
EOF
fi
